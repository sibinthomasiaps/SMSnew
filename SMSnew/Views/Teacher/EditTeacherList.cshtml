                            <div class="card-body">
                                <h4 class="card-title">Step wizard with validation</h4>
                                <form action="#" class="validationtedit-wizard wizard-circle">
                                    <!-- Step 1 -->
                                    <h6>Profile Info</h6>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tfirstname"> First Name : <span class="danger">*</span> </label>
                                                    @Html.EditorFor(model => model.TeacherFirstName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tlastname"> Last Name : <span class="danger">*</span> </label>
                                                    @Html.EditorFor(model => model.TeacherLastName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tgender"> Gender : <span class="danger">*</span> </label>
