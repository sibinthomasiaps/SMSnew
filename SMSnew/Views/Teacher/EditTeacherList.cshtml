    }, "Select Country", new { @class = "custom-select form-control", @required = "required" })

                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                    <!-- Step 4 -->
                                    <h6>Qualification & Experience Details</h6>
                                    <section>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="texperience">Experience year :</label>
                                                    @Html.EditorFor(model => model.TeacherExperienced, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                    @*<input type="text" class="form-control required" id="texperience" name="texperience">*@
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="tqualification">Qualification</label>
                                                    @Html.EditorFor(model => model.TeacherQualification, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                    @*<input type="text" class="form-control required" id="tqualification" name="tqualification">*@

                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="texpdescription">Experience Description</label>
                                                    @Html.TextAreaFor(model => model.TeacherExpDescription, new { @class = "form-control", @rows = 3, @required = "required" })
                                                    @*@Html.EditorFor(model => model.TeacherExpDescription, new { htmlAttributes = new { @class = "form-control", @required = "required" } })*@
                                                    @*<textarea name="texpdescription" id="texpdescription" rows="4" class="form-control"></textarea>*@
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="texpdescription">Modified Description</label>
                                                    @Html.TextAreaFor(model => model.TeacherModifiedDescription, new { @class = "form-control", @rows = 3, @required = "required" })
                                                    @*@Html.EditorFor(model => model.TeacherModifiedDescription, new { htmlAttributes = new { @class = "form-control", @required = "required" } })*@
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        @*<input type="button" name="Save" id="Save" value="Save" onclick="clickbutton" />*@
                                                        @*<textarea name="texpdescription" id="texpdescription" rows="4" class="form-control"></textarea>*@
                                                    </div>

                                                </div>
                                                <div>

                                                </div>

                                            </div>
                                    </section>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
