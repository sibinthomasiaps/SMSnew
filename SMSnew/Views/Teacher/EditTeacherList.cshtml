                                                    {
                                                        <label class="custom-control custom-radio">
                                                            <input id="Gender" name="Gender" type="radio" checked="" class="custom-control-input" value="Male">

                                                            <span class="custom-control-indicator"></span>
                                                            <span class="custom-control-description">Male</span>
                                                        </label>
                                                        <label class="custom-control custom-radio">
                                                            <input id="Gender" name="Gender" type="radio" value="Female" class="custom-control-input">

                                                            <span class="custom-control-indicator"></span>
                                                            <span class="custom-control-description">Female</span>
                                                        </label>
                                                    }
                                                    else
                                                    {
                                                        <label class="custom-control custom-radio">
                                                            <input id="Gender" name="Gender" type="radio" class="custom-control-input" value="Male">

                                                            <span class="custom-control-indicator"></span>
                                                            <span class="custom-control-description">Male</span>
                                                        </label>
                                                        <label class="custom-control custom-radio">
                                                            <input id="Gender" name="Gender" type="radio" checked="" value="Female" class="custom-control-input">

