    new SelectListItem{Text="A Positive"},
     new SelectListItem{Text="B Positive"},
      new SelectListItem{Text="AB Positive"},
       new SelectListItem{Text="O Positive"},
         new SelectListItem{Text="A Negative"},
     new SelectListItem{Text="B Negative"},
      new SelectListItem{Text="AB Negative"},
